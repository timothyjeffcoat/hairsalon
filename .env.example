# YourHairSalon Booking System - Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DB_USERNAME=yourhairsalon_user
DB_PASSWORD=your_secure_db_password
DB_URL=jdbc:postgresql://localhost:5432/yourhairsalon

# LDAP Configuration
LDAP_BASE=dc=yourhairsalon,dc=com
LDAP_URL=ldap://127.0.0.1:1389
LDAP_USER_DN=cn=Directory Manager
LDAP_PASSWORD=your_secure_ldap_password

# Email Configuration
EMAIL_HOST=mail.yourhairsalonpro.com
EMAIL_PROTOCOL=smtp
EMAIL_PORT=587
EMAIL_USERNAME=booking@yourhairsalonpro.com
EMAIL_PASSWORD=your_secure_email_password

# PayPal Classic API Configuration
PAYPAL_API_USERNAME=your_paypal_api_username
PAYPAL_API_PASSWORD=your_paypal_api_password
PAYPAL_API_SIGNATURE=your_paypal_api_signature
PAYPAL_ENVIRONMENT=sandbox

# PayPal REST API Configuration  
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENDPOINT=https://api.sandbox.paypal.com

# PayPal Return URLs
PAYPAL_RETURN_URL=http://localhost:9080/yourhairsalon-booking
PAYPAL_CANCEL_URL=http://localhost:9080/yourhairsalon-booking
PAYPAL_MOBILE_RETURN_URL=http://m.yourhairsalonpro.com:8080/yourhairsalon-booking
PAYPAL_MOBILE_CANCEL_URL=http://m.yourhairsalonpro.com:8080/yourhairsalon-booking

# SMS Integration (Nexmo)
SMS_API_KEY=your_nexmo_api_key
SMS_API_SECRET=your_nexmo_api_secret